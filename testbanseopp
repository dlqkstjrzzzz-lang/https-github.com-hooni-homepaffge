// --- Lightweight UI components (no external UI lib) ---
function Button({ children, variant = "default", size = "base", className = "", onClick }) {
  const base = "inline-flex items-center justify-center rounded-xl border transition-all focus:outline-none focus:ring-2 focus:ring-slate-300 disabled:opacity-50 disabled:pointer-events-none";
  const variants = {
    default: "bg-slate-900 text-white hover:opacity-90 border-slate-900",
    outline: "bg-white text-slate-800 hover:bg-slate-50 border-slate-200",
    ghost: "bg-transparent text-slate-800 hover:bg-slate-100 border-transparent",
  };
  const sizes = { lg: "h-11 px-5 text-sm", base: "h-10 px-4 text-sm" };
  return (
    <button onClick={onClick} className={[base, variants[variant], sizes[size], className].join(" ")}>{children}</button>
  );
}

function Card({ children, className = "" }) {
  return <div className={["border bg-white rounded-2xl", className].join(" ")}>{children}</div>;
}
function CardHeader({ children }) { return <div className="px-6 pt-6">{children}</div>; }
function CardTitle({ children, className = "" }) { return <h3 className={["text-lg font-bold", className].join(" ")}>{children}</h3>; }
function CardContent({ children }) { return <div className="px-6 pb-6">{children}</div>; }

function ContactCard({ icon, title, value, href }) {
  return (
    <a href={href} target={href.startsWith("http") ? "_blank" : undefined} rel="noreferrer">
      <div className="group border rounded-2xl p-4 hover:shadow-sm transition-all bg-white">
        <div className="flex items-center gap-3">
          <div className="grid place-items-center rounded-xl border w-10 h-10">{icon}</div>
          <div>
            <div className="font-semibold">{title}</div>
            <div className="text-slate-600 text-sm truncate group-hover:underline">
              {value}
            </div>
          </div>
        </div>
      </div>
    </a>
  );
}
